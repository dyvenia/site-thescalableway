<aside class="newsletter | flow">
  <h3>{{ meta.newsletter_title }}</h3>
  <form data-hubspot class="flow">
    <label class="form-control gutter-xs text-step-min-1">
      <input type="checkbox" name="consent" required />
      {{ meta.newsletter_consent_message | markdownFormat | safe }}
    </label>

    <div class="flow gutter-xs">
      <div class="cluster gutter-xs">
        <div>
          <label class="visually-hidden">First Name</label>
          <input type="text" name="firstname" autocomplete="given-name" placeholder="First Name" required />
        </div>
        <div>
          <label class="visually-hidden">Last Name</label>
          <input type="text" name="lastname" autocomplete="family-name" placeholder="Last Name" required />
        </div>
        <div class="flow-space-s">
          <label class="visually-hidden">Company Name</label>
          <input type="text" name="company" autocomplete="organization" placeholder="Company Name" />
        </div>
      </div>

      <div class="sidebar" data-direction="rtl">
        <div>
          <label class="visually-hidden">Email Address</label>
          <input
            type="email"
            name="email"
            autocomplete="email"
            placeholder="Email Address"
            required
            class="no-right-line"
          />
        </div>

        <button class="button" type="submit" data-button-variant="blue">Submit</button>
      </div>
    </div>
  </form>

  <div data-hubspot-message>
    <div data-hubspot-success class="hidden">{{ meta.newsletter_success_message }}</div>
    <div data-hubspot-error class="hidden">{{ meta.newsletter_error_message }}</div>
    <div data-hubspot-consent-error class="hidden">{{ meta.newsletter_consent_required }}</div>
  </div>
</aside>

{% css "local" %}
  {% include "css/form.css" %}
{% endcss %}

{% js "defer" %}
  {% include "scripts/hubspot-submission.js" %}
{% endjs %}
