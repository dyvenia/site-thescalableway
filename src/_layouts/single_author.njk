---
layout: base
---

<div class="region wrapper flow prose" style="--region-space-top: var(--space-xl-2xl)">
  <h1>{{ title }}</h1>

  <div class="sidebar" data-direction="rtl">
    <div class="flow">
      <h2>{{ name }}</h2>
      {% if description_long %}
        {{ description_long | markdownFormat | safe }}
      {% endif %}
      {% if linkedin %}
        <p>
          <a href="{{ linkedin }}" rel="me"> {% svg 'platform/linkedin', "LinkedIn", "text-pink" %} </a>
        </p>
      {% endif %}
    </div>
    {% image "." + image, "", null, "eager", null, "rounded-full aspect-1 object-cover" %}
  </div>

  {% include "partials/hubspot-form.njk" %}

  <h3>Blog posts:</h3>

  <ul>
    {% for post in collections.posts %}
      {% if post.data.author == name %}
        <li>
          <a href="{{ post.url }}">{{ post.data.title }}</a>
        </li>
      {% endif %}
    {% endfor %}
  </ul>
</div>
