  <!-- if you need to darken or lighten your bg -->


  <!-- date -->
  <text
    font-family="{{ fontBody }}, sans-serif"
    font-size="24"
    font-weight="900"
    fill="{{ accent }}"
    letter-spacing="-1"
  >
    <tspan x="{{ horizontalStartingPoint }}" y="{{ verticalStartingPoint - 120 }}">
      {{ post.date | formatDate('DD / MM / YYYY') }}
    </tspan>
  </text>

  <!-- title -->
  <text
    id="text"
    font-family="{{ fontDisplay }}, sans-serif"
    font-size="60"
    font-weight="500"
    fill="{{ text }}"
    letter-spacing="-3"
  >
    {% for line in titleInLines %}
      <tspan x="{{ horizontalStartingPoint }}" y="{{ verticalStartingPoint - 20 + loop.index0 * 65 }}"> {{ line }} </tspan>
    {% endfor %}
  </text>

  <!-- sitename / url -->
  <text
    font-family="{{ fontBody }}, sans-serif"
    font-size="24"
    font-weight="500"
    fill="{{ text }}"
    letter-spacing="-0.5"
  >
    <!-- <tspan x="160" y="580">{{ meta.siteName }} · {{ meta.url | replace("https://", "") | replace("http://", "") }}</tspan> -->
    <tspan x="{{ horizontalStartingPoint }}" y="580">{{ meta.siteName }} — {{ siteUrl }}</tspan>
  </text>
</svg>
